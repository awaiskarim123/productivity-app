# Copy to .env and fill in values
# cp env.example .env

# Database (required) - PostgreSQL
# Local: postgresql://user:password@localhost:5432/productivity
# Railway/Render: use the URL from the database service
DATABASE_URL="postgresql://user:password@localhost:5432/productivity"

# JWT (required) - at least 32 characters
# Generate: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-at-least-32-chars"

# Optional
NODE_ENV=development
PORT=4000
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=30d
